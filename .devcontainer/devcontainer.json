{
  "image": "ghcr.io/mrsimonemms/devcontainers/full",
  "name": "devcontainer",
  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {
      "installTFsec": true,
      "installTerraformDocs": true
    },
    "ghcr.io/dhoeric/features/trivy:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.makefile-tools",
        "hashicorp.terraform",
        "HashiCorp.HCL"
      ],
      "settings": {}
    }
  },
  "containerEnv": {
    "TF_WORKSPACE": "infradev"
  },
  "remoteEnv": {
    "TF_CLI_ARGS_apply": "-var-file=${containerEnv:TF_WORKSPACE}.tfvars",
    "TF_CLI_ARGS_destroy": "-var-file=${containerEnv:TF_WORKSPACE}.tfvars",
    "TF_CLI_ARGS_plan": "-var-file=${containerEnv:TF_WORKSPACE}.tfvars"
  }
}
