{
  "image": "ghcr.io/mrsimonemms/devcontainers/full",
  "name": "devcontainer",
  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {
      "installTFsec": true,
      "installTerraformDocs": true
    },
    "ghcr.io/dhoeric/features/trivy:1": {},
    "ghcr.io/devcontainers-contrib/features/argo-cd:1": {},
    "ghcr.io/devcontainers-extra/features/gh-release:1": {
      "repo": "vitobotta/hetzner-k3s",
      "binaryNames": "hetzner-k3s"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.makefile-tools",
        "hashicorp.terraform",
        "HashiCorp.HCL"
      ],
      "settings": {}
    }
  },
  "mounts": [
    {
      "source": "${localEnv:HOME}${localEnv:USERPROFILE}/.ssh",
      "target": "/home/vscode/.ssh",
      "type": "bind"
    }
  ],
  "initializeCommand": {
    "ensureSSHDirNix": "mkdir -p ${localEnv:HOME}${localEnv:USERPROFILE}/.ssh"
  },
  "postAttachCommand": {
    "ensureKubeDir": "mkdir -p /home/vscode/.kube"
  },
  "containerEnv": {
    "KUBE_CONFIG_PATH": "~/.kube/config"
  }
}
